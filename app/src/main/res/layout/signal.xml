<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/emergency_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/emergency_call"
            android:textSize="@dimen/btn_normal_text_size" />

        <Button
            android:id="@+id/service_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/service_call"
            android:textSize="@dimen/btn_normal_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/signal_bt_ok"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/btn_succ_fail_text_size"
            android:text="@string/Success" />
        <Button
            android:id="@+id/signal_bt_failed"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/btn_succ_fail_text_size"
            android:text="@string/Failed" />
    </LinearLayout>
</LinearLayout>
